<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag do %>

	<%= label_tag :search %>
	<%= text_field_tag 'search', @search, :placeholder => 'Write the search' %>
	<%= submit_tag "Search", :class => "btn btn-large btn-primary"  %>

<%end%>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>